<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        tools:contentDescription="Tab bar for debugging process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f_pieces_list_start_debug"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/ic_play_arrow"/>

        <ImageView
            android:id="@+id/f_pieces_list_open_scripts"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/ic_file_open"/>

        <ImageView
            android:id="@+id/f_pieces_list_paste_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/ic_paste"/>

        <ImageView
            android:id="@+id/f_pieces_list_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/ic_save"/>

        <ImageView
            android:id="@+id/f_pieces_list_resources_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_folder_special"/>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/f_pieces_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>