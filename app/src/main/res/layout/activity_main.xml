<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="1">
        <EditText
            android:id="@+id/personalEditor_editText_phrase"
            android:layout_gravity="fill"
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="1"
            android:text="Some text"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/personalEditor_button_start"
            android:layout_gravity="fill"
            android:text="Start"/>
        <EditText
            android:id="@+id/personalEditor_editText_script"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:gravity="start|top"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:hint="Type your script here..."
            android:textSize="15sp"
            android:background="#00000000"/>
    </GridLayout>
    <View
        android:id="@+id/view_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:rotation="180"
        android:background="#FF0000"/>
    <View
        android:id="@+id/personalEditor_selectFile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FF00"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_gravity="end"/>
</FrameLayout>