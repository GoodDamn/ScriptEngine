<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/dialog_select_type_interact"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_interact"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Interaction"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/dialog_select_type_animation"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_animation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Animation"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_select_animation_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/dialog_select_sequenceAnim"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sequence"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Sequence"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/dialog_select_parallelAnim"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_parallel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Parallel"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>